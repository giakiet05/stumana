<UserControl x:Class="Stumana.WPF.Views.MainView.ScoreOption.ScoreTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d"
             Height="450" Width="800">
    <Grid Background="White">
        <ItemsControl>
            <ItemsControl.Items>
                <system:String>Apple</system:String>
                <system:String>Banana</system:String>
                <system:String>Cherry</system:String>
                <system:String>Date</system:String>
                <system:String>Elderberry</system:String>
            </ItemsControl.Items>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Margin="0,0,15,0" Background="LightGray" Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>