<UserControl x:Class="Stumana.WPF.Views.Popup.AddSemesterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Stumana.WPF.Views.Popup"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="926" d:DesignWidth="1024"
             Background="White">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/CommonStyles.xaml"/>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/InputStyles.xaml"/>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/FilterStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="40,60,40,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Thêm học kỳ" FontSize="30" FontWeight="SemiBold" Margin="0,0,0,30" Foreground="#333" FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"/>
        <!-- Row 1: SemesterID, Start_Year, End_Year -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Mã học kỳ" Style="{StaticResource LabelStyle}"/>
                <TextBox Style="{StaticResource InputFieldStyle}" Text="{Binding SemesterId, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBlock Text="Năm bắt đầu" Style="{StaticResource LabelStyle}"/>
                <TextBox Style="{StaticResource InputFieldStyle}" Text="{Binding StartYear, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Grid.Column="4">
                <TextBlock Text="Năm kết thúc" Style="{StaticResource LabelStyle}"/>
                <TextBox Style="{StaticResource InputFieldStyle}" Text="{Binding EndYear, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </Grid>
        <!-- Row 2: Min/Max Age -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>

                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <ComboBox Style="{StaticResource FilterComboBoxStyle}"
                          ItemsSource="{Binding MinAgeOptions}"
                          SelectedItem="{Binding MinAge}"
                          HorizontalAlignment="Left"
                          Width="230"
                          Tag="Tuổi tối thiểu"
                          Margin="0,23,0,0"
                          Height="35">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem" BasedOn="{StaticResource FilterComboBoxItemStyle}"/>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <ComboBox Style="{StaticResource FilterComboBoxStyle}"
                          ItemsSource="{Binding MaxAgeOptions}"
                          SelectedItem="{Binding MaxAge}"
                          HorizontalAlignment="Left"
                          Tag="Tuổi tối đa"
                          Margin="23"
                          Height="35">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem" BasedOn="{StaticResource FilterComboBoxItemStyle}"/>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>
            </StackPanel>
        </Grid>
        <!-- Row 3: Passing Grade -->
        <Grid Grid.Row="3">
            <StackPanel>
                <TextBlock Text="Điểm đạt" Style="{StaticResource LabelStyle}"/>
                <TextBox HorizontalAlignment="Left" Width="230" Style="{StaticResource InputFieldStyle}" Text="{Binding PassingGrade, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </Grid>
        <!-- Row 4: Level Table -->
        <StackPanel Grid.Row="4" Margin="0,0,0,0">
            <TextBlock Text="Mức điểm:" FontSize="20" Style="{StaticResource LabelStyle}"/>
            <DataGrid ItemsSource="{Binding Levels}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      Height="120"
                      Width="600"
                      Margin="10,10,0,0"
                      HorizontalAlignment="Left">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border CornerRadius="10,10,0,0" Background="#152259" BorderBrush="Transparent" BorderThickness="0" Height="34">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="FontFamily" Value="pack://application:,,,/Resource/Font/#Poppins Medium"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <Setter Property="BorderBrush" Value="#152259" />
                        <Setter Property="BorderThickness" Value="0" />
                    </Style>
                </DataGrid.Style>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Loại" Binding="{Binding Type}" Width="200"/>
                    <DataGridTextColumn Header="Tối thiểu" Binding="{Binding Minimum}" Width="200"/>
                    <DataGridTextColumn Header="Tối đa" Binding="{Binding Max}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,10">
                <Button x:Name="btEditLevel" Margin="10" VerticalAlignment="Center" Width="99" Height="40" Background="#6C6C6C" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="20">
                    <TextBlock HorizontalAlignment="Center" FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium" FontSize="16" Text="Sửa" Foreground="Snow" Cursor="Hand" ToolTip="Nhấn để sửa thông tin" />
                </Button>
                <Button x:Name="btDeleteLevel" Margin="10" VerticalAlignment="Center" Width="99" Height="40" Background="#E17D7D" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="20">
                    <TextBlock HorizontalAlignment="Center" FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium" FontSize="16" Text="Xóa" Foreground="Snow" Cursor="Hand" ToolTip="Nhấn để xóa thông tin" />
                </Button>
                <Button x:Name="btAddLevel" Margin="10" VerticalAlignment="Center" Width="99" Height="40" Background="#8DB575" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="20">
                    <TextBlock HorizontalAlignment="Center" FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium" FontSize="16" Text="Thêm" Foreground="Snow" Cursor="Hand" ToolTip="Nhấn để thêm thông tin" />
                </Button>
            </StackPanel>
            <TextBlock Text="Loại điểm:" FontSize="20" Style="{StaticResource LabelStyle}"/>
            <DataGrid ItemsSource="{Binding ScoreTypes}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      Height="120"
                      Width="600"
                      Margin="10,10,0,0"
                      HorizontalAlignment="Left">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border CornerRadius="10,10,0,0" Background="#152259" BorderBrush="Transparent" BorderThickness="0" Height="34">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="FontFamily" Value="pack://application:,,,/Resource/Font/#Poppins Medium"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <Setter Property="BorderBrush" Value="#152259" />
                        <Setter Property="BorderThickness" Value="0" />
                    </Style>
                </DataGrid.Style>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Loại" Binding="{Binding Type}" Width="200"/>
                    <DataGridTextColumn Header="Hệ số" Binding="{Binding Coefficient}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,10">
                <Button x:Name="btEditScoreType" Margin="10" VerticalAlignment="Center" Width="99" Height="40" Background="#6C6C6C" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="20">
                    <TextBlock HorizontalAlignment="Center" FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium" FontSize="16" Text="Sửa" Foreground="Snow" Cursor="Hand" ToolTip="Nhấn để sửa thông tin" />
                </Button>
                <Button x:Name="btDeleteScoreType" Margin="10" VerticalAlignment="Center" Width="99" Height="40" Background="#E17D7D" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="20">
                    <TextBlock HorizontalAlignment="Center" FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium" FontSize="16" Text="Xóa" Foreground="Snow" Cursor="Hand" ToolTip="Nhấn để xóa thông tin" />
                </Button>
                <Button x:Name="btAddScoreType" Margin="10" VerticalAlignment="Center" Width="99" Height="40" Background="#8DB575" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="20">
                    <TextBlock HorizontalAlignment="Center" FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium" FontSize="16" Text="Thêm" Foreground="Snow" Cursor="Hand" ToolTip="Nhấn để thêm thông tin" />
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <CheckBox Content="Sao chép học kỳ trước?" VerticalAlignment="Center" IsChecked="{Binding CopyLastSemester, Mode=TwoWay}"/>
            </StackPanel>
        </StackPanel>
        <!-- Add Grade Button -->
        <Button Grid.Row="5" Content="Thêm học kỳ" Style="{StaticResource PrimaryButtonStyle}" Width="120" Height="36" HorizontalAlignment="Right" Margin="0,0,20,20"/>
    </Grid>
</UserControl>
