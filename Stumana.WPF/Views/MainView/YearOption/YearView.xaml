<UserControl x:Class="Stumana.WPF.Views.MainView.YearOption.YearView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignWidth="1300" d:DesignHeight="600">


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/CommonStyles.xaml" />
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/InputStyles.xaml" />
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/FilterStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0"
              Background="White"
              HorizontalAlignment="Stretch"
              Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderThickness="1" CornerRadius="10" BorderBrush="#152259" Margin="10 10 10 0">
                <GroupBox VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <GroupBox.Style>
                        <Style TargetType="GroupBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GroupBox">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <ContentPresenter Grid.Row="0" ContentSource="Header" />
                                            <ContentPresenter Grid.Row="1" />
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="Transparent" />
                        </Style>
                    </GroupBox.Style>
                    <GroupBox.Header>
                        <Border Background="#059669"
                                CornerRadius="10,10,0,0"
                                Padding="10"
                                HorizontalAlignment="Stretch">
                            <TextBlock Text="Năm Học"
                                       Foreground="White"
                                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                       FontSize="16"
                                       HorizontalAlignment="Center" />
                        </Border>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" CornerRadius="8"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                Height="37" Width="400"
                                Background="#FCFAFA"
                                BorderThickness="1"
                                BorderBrush="#C4C4C4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0" Kind="Magnify"
                                                         Width="25" Height="25"
                                                         Margin="5"
                                                         Foreground="#8A8A8A"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center" />

                                <TextBox Grid.Column="1" FontSize="16"
                                         Foreground="Black"
                                         FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Tìm kiếm"
                                         materialDesign:TextFieldAssist.HasClearButton="True"
                                         Padding="5"
                                         Text="{Binding SearchTextYear, UpdateSourceTrigger=PropertyChanged}">
                                </TextBox>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1" Margin="0,0,0,0" VerticalAlignment="Stretch">
                            <DataGrid Margin="10 10 10 0"
                                      AutoGenerateColumns="False"
                                      HorizontalAlignment="Stretch"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      FontSize="20"
                                      ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.CanContentScroll="False"
                                      CellStyle="{StaticResource DataGridCellStyle}"
                                      RowStyle="{StaticResource DataGridRowStyle}"
                                      ItemsSource="{Binding YearTable}"
                                      SelectedItem="{Binding SelectedYear, UpdateSourceTrigger=PropertyChanged}">

                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã năm" Width="Auto" MinWidth="290"
                                                        Binding="{Binding YearID}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Năm học" Width="Auto" MinWidth="290"
                                                        Binding="{Binding YearName}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Tuổi tối thiểu" Width="Auto" MinWidth="290"
                                                        Binding="{Binding MinAge}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Tuổi tối đa" Width="Auto" MinWidth="290"
                                                        Binding="{Binding MaxAge}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Điểm đạt tối thiểu" Width="Auto" MinWidth="290"
                                                        Binding="{Binding MinScore}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Sĩ số tối đa" Width="Auto" MinWidth="290"
                                                        Binding="{Binding MaxClassSize}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                        <StackPanel Grid.Row="2"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal"
                                    FlowDirection="LeftToRight">
                            <Button Width="100"
                                    Content="Thêm"
                                    FontSize="18"
                                    Padding="10"
                                    Margin="10,15,10,15"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding AddYearCommand}" />
                            <Button Width="100"
                                    Content="Sửa"
                                    FontSize="18"
                                    Padding="10"
                                    Margin="10,15,10,15"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding EditYearCommand}" />
                            <Button Width="100"
                                    Content="Xóa"
                                    FontSize="18"
                                    Padding="10"
                                    Margin="10,15,10,15"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding DeleteYearCommand}" />
                            <Button Margin="10,15,10,15"
                                    Width="200"
                                    FontSize="18"
                                    Content="Chỉnh sửa loại điểm"
                                    Padding="10"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding EditScoreTypeCommand}" />


                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Border>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1"
              Background="White"
              HorizontalAlignment="Stretch"
              Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderThickness="1" CornerRadius="10" BorderBrush="#152259" Margin="10 10 10 0">
                <GroupBox VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <GroupBox.Style>
                        <Style TargetType="GroupBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GroupBox">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <ContentPresenter Grid.Row="0" ContentSource="Header" />
                                            <ContentPresenter Grid.Row="1" />
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="Transparent" />
                        </Style>
                    </GroupBox.Style>
                    <GroupBox.Header>
                        <Border Background="#059669"
                                CornerRadius="10,10,0,0"
                                Padding="10"
                                HorizontalAlignment="Stretch">
                            <TextBlock Text="Khối Lớp"
                                       Foreground="White"
                                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                       FontSize="16"
                                       HorizontalAlignment="Center" />
                        </Border>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" CornerRadius="8"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Center"
                                Height="37" Width="400"
                                Background="#FCFAFA"
                                BorderThickness="1"
                                BorderBrush="#C4C4C4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0" Kind="Magnify"
                                                         Width="25" Height="25"
                                                         Margin="5"
                                                         Foreground="#8A8A8A"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center" />

                                <TextBox Grid.Column="1" FontSize="16"
                                         Foreground="Black"
                                         FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Tìm kiếm"
                                         materialDesign:TextFieldAssist.HasClearButton="True"
                                         Padding="5"
                                         Text="{Binding SearchTextGrade, UpdateSourceTrigger=PropertyChanged}">
                                </TextBox>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1" Margin="0,0,0,0" VerticalAlignment="Stretch">
                            <DataGrid Margin="10 10 10 0"
                                      AutoGenerateColumns="False"
                                      HorizontalAlignment="Stretch"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      FontSize="20"
                                      CellStyle="{StaticResource DataGridCellStyle}"
                                      RowStyle="{StaticResource DataGridRowStyle}"
                                      ItemsSource="{Binding GradeTable}"
                                      SelectedItem="{Binding SelectedGrade, UpdateSourceTrigger=PropertyChanged}">

                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã khối" Width="*" MinWidth="290"
                                                        Binding="{Binding GradeID}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Khối" Width="*" MinWidth="290"
                                                        Binding="{Binding GradeName}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                        <StackPanel Grid.Row="2"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal"
                                    FlowDirection="LeftToRight">
                            <Button Width="100"
                                    Content="Thêm"
                                    FontSize="18"
                                    Padding="10"
                                    Margin="10,15,10,15"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding AddGradeCommand}" />
                            <Button Width="100"
                                    Content="Sửa"
                                    FontSize="18"
                                    Padding="10"
                                    Margin="10,15,10,15"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding EditGradeCommand}" />
                            <Button Width="100"
                                    Content="Xóa"
                                    FontSize="18"
                                    Padding="10"
                                    Margin="10,15,10,15"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding DeleteGradeCommand}" />
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Border>
        </Grid>
    </Grid>
</UserControl>