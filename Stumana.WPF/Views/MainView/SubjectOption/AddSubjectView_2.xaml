<UserControl x:Class="Stumana.WPF.Views.MainView.SubjectOption.AddSubjectView_2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stumana.WPF.Views.AuthencationViews"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Height="720" Width="1198">

    <Grid Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="0"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>

        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"          
            Height="59"
            Width="1198"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Orientation="Horizontal"/>
        <StackPanel Grid.Row="2" Orientation="Vertical">

            <DataGrid Margin="10 20 0 0" AutoGenerateColumns="False" Height="546" Width="1100"
          HorizontalAlignment="Left" CanUserAddRows="False">

                <!-- Tạo Style cho Header với góc bo tròn -->
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border CornerRadius="10,10,0,0" 
                                        Background="#152259" 
                                    BorderBrush="Transparent" 
                                    BorderThickness="0"
                                            Height="34"
                                    >
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="FontFamily" Value="pack://application:,,,/Resource/Font/#Poppins Medium"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>

                </DataGrid.Resources>
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <!-- Đổi màu nền -->
                        <Setter Property="BorderBrush" Value="#152259" />
                        <!-- Đổi màu viền -->
                        <Setter Property="BorderThickness" Value="0" />
                        <!-- Độ dày viền -->

                    </Style>
                </DataGrid.Style>
                <DataGrid.CellStyle>
                    <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    </Style>
                </DataGrid.CellStyle>
                <!-- Cột 1: Tên -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Loại điểm" Width="250" />
                    <DataGridTextColumn Header="Số lượng" Width="250" />
                   

                </DataGrid.Columns>
            </DataGrid>
            <StackPanel   Grid.Row="3"  Orientation="Horizontal" FlowDirection="RightToLeft" Width="1034" >
                <Button x:Name="btEditType"
                 Command="{Binding editCommand}"       
                Margin="10"
                VerticalAlignment="Center"

                Width="99"
                Height="40"
                Background="#6C6C6C"
                Style="{StaticResource MaterialDesignRaisedButton}"
                materialDesign:ButtonAssist.CornerRadius="20">
                    <TextBlock HorizontalAlignment="Center"
       
        FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
       FontSize="16"
       Text="Sửa"
       Foreground="Snow"
       Cursor="Hand"
       ToolTip="Nhấn để sửa thông tin" />
                </Button>
                <Button x:Name="btDeleteType"
                        Command="{Binding deleteCommand}"
                        Margin="10"
                        VerticalAlignment="Center"

                        Width="99"
                        Height="40"
                        Background="#E17D7D"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="20">      
                    <TextBlock HorizontalAlignment="Center"
   
                        FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                       FontSize="16"
                       Text="Xóa"
                       Foreground="Snow"
                       Cursor="Hand"
                       ToolTip="Nhấn để xóa môn học" />
                </Button>
                <Button x:Name="btAddType"
                        Command="{Binding addCommand}"
                Margin="10"
                VerticalAlignment="Center"

                Width="99"
                Height="40"
                Background="#8DB575"
                Style="{StaticResource MaterialDesignRaisedButton}"
                materialDesign:ButtonAssist.CornerRadius="20">
                    <TextBlock HorizontalAlignment="Center"
   
                    FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                   FontSize="16"
                   Text="Thêm"
                   Foreground="Snow"
                   Cursor="Hand"
                   ToolTip="Nhấn để thêm môn học" />
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
