<UserControl x:Class="Stumana.WPF.Views.Popup.AddStudentViewToClass"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="547" d:DesignWidth="969"
             Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/CommonStyles.xaml" />
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/InputStyles.xaml" />
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/FilterStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Thêm học sinh"
                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                   FontSize="35"
                   FontWeight="SemiBold"
                   Foreground="#333333"
                   Margin="20,30,0,0" />

        <ScrollViewer Grid.Row="1">
            <DataGrid Margin="10 20 0 0"
                      AutoGenerateColumns="False"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      ItemsSource="{Binding ClassTableView}"
                      SelectedItem="{Binding SelectedClass, Mode=TwoWay}">

                <!-- Tạo Style cho Header với góc bo tròn -->
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border Background="#152259"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"
                                            Height="34"
                                            Padding="10,0,10,0"
                                            CornerRadius="10,10,10,10">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="FontFamily"
                                Value="pack://application:,,,/Resource/Font/#Poppins Medium" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <!-- Đổi màu nền -->
                        <Setter Property="BorderBrush" Value="#152259" />
                        <!-- Đổi màu viền -->
                        <Setter Property="BorderThickness" Value="0" />
                    </Style>
                </DataGrid.Style>

                <DataGrid.CellStyle>
                    <Style BasedOn="{StaticResource MaterialDesignDataGridCell}"
                           TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên Lớp" Width="*" Binding="{Binding [Tên lớp]}" />
                    <DataGridTextColumn Header="Sĩ số" Width="*" Binding="{Binding [Sĩ số]}" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Width="130"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Content="Thêm"
                    FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                    Margin="20"
                    FontSize="18" />

            <Button Width="130"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Content="Hủy"
                    FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                    Command="{Binding CancelCommand}"
                    Margin="20"
                    FontSize="18" />
        </StackPanel>
    </Grid>
</UserControl>