<UserControl x:Class="Stumana.WPF.Views.Popup.AddStudentViewToClass"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/CommonStyles.xaml" />
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/InputStyles.xaml" />
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/FilterStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Thêm học sinh"
                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                   FontSize="35"
                   FontWeight="SemiBold"
                   Foreground="#333333"
                   Margin="20,20,0,0" />

        <Border Grid.Row="1" CornerRadius="8"
                HorizontalAlignment="Center"
                Height="50" Width="950"
                Background="#FCFAFA"
                BorderThickness="1"
                BorderBrush="#C4C4C4">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch">
                <Button Style="{StaticResource MaterialDesignIconButton}">
                    <materialDesign:PackIcon Kind="Magnify" Width="25" Height="25" Foreground="#8A8A8A" />
                </Button>

                <TextBox FontSize="13"
                         Foreground="Black"
                         FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Tìm kiếm"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         HorizontalAlignment="Right" Width="900"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                </TextBox>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <DataGrid Margin="10 20 0 0"
                      AutoGenerateColumns="False"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      ItemsSource="{Binding StudentChoiceTableView}">

                <!-- Tạo Style cho Header với góc bo tròn -->
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border Background="#152259"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"
                                            Height="34"
                                            Padding="10,0,10,0"
                                            CornerRadius="10,10,10,10">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="FontFamily"
                                Value="pack://application:,,,/Resource/Font/#Poppins Medium" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <!-- Đổi màu nền -->
                        <Setter Property="BorderBrush" Value="#152259" />
                        <!-- Đổi màu viền -->
                        <Setter Property="BorderThickness" Value="0" />
                    </Style>
                </DataGrid.Style>

                <DataGrid.CellStyle>
                    <Style BasedOn="{StaticResource MaterialDesignDataGridCell}"
                           TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Chọn" IsReadOnly="False" Binding="{Binding IsSelected}" />
                    <DataGridTextColumn Header="Mã học sinh" Binding="{Binding StudentID}" />
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Ngày sinh"
                                        Binding="{Binding Birthday, StringFormat=\{0:dd/MM/yyyy\}}" />
                    <DataGridTextColumn Header="Số điện thoại" Binding="{Binding PhoneNumber}" />
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <StackPanel Grid.Row="3" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Width="130"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Content="Lưu thay đổi"
                    FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                    Margin="20"
                    FontSize="18"
                    Command="{Binding AddSubjectScoreTypeCommand}" />

            <Button Width="130"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Content="Hủy"
                    FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                    Command="{Binding CancelCommand}"
                    Margin="20"
                    FontSize="18" />
        </StackPanel>
    </Grid>
</UserControl>