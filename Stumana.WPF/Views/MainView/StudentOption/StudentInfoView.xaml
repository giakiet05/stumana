<UserControl x:Class="Stumana.WPF.Views.MainView.StudentOption.StudentInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">

    <Border BorderThickness="1" 
            CornerRadius="10" 
            BorderBrush="#152259" 
            Height="Auto" Width="900"
            Margin="10 0 10 0" 
            Background="White">

        <GroupBox>
            <GroupBox.Style>
                <Style TargetType="GroupBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="GroupBox">
                                <StackPanel>
                                    <!-- Header GroupBox -->
                                    <ContentPresenter ContentSource="Header" />
                                    <!-- Nội dung GroupBox -->
                                    <ContentPresenter />
                                </StackPanel>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </GroupBox.Style>
            <GroupBox.Header>
                <Border Background="#059669" CornerRadius="10,10,0,0" Padding="10">
                    <TextBlock Text="Danh sách học sinh"
                               Foreground="White"
                               FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                               FontSize="16"
                               HorizontalAlignment="Center" />
                </Border>
            </GroupBox.Header>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>


                <DataGrid Margin="0,20,0,0"
                          AutoGenerateColumns="False"
                          HorizontalAlignment="Stretch"
                          CanUserAddRows="False"
                          CellStyle="{StaticResource DataGridCellStyle}"
                          RowStyle="{StaticResource DataGridRowStyle}"
                          Grid.Row="0" Grid.Column="0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Môn học" Width="Auto" />
                        <DataGridTextColumn Header="Thường xuyên" Width="Auto" />
                        <DataGridTextColumn Header="Giữa kì" Width="Auto" />
                        <DataGridTextColumn Header="Cuối kì" Width="Auto" />
                        <DataGridTextColumn Header="Trung bình" Width="Auto" />
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="0" Grid.Column="1"
                      Background="#152259"
                      Margin="10,20,10,0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                   FontSize="20"
                                   Text="Tổng kết"
                                   Foreground="#EDE995" />
                    </Grid>

                    <StackPanel Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0" Background="#FFFFFF"
                                      Padding="5 0 10 0"
                                      Width="120" Height="30"
                                      Foreground="Black"
                                      materialDesign:HintAssist.Hint="Năm học"
                                      materialDesign:HintAssist.HintOpacity="1"
                                      Style="{StaticResource MaterialDesignComboBox}"
                                      FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                      Margin="10,0,20,0"
                                      HorizontalAlignment="Center"
                                      BorderBrush="#64748B" BorderThickness="1"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding SchoolYearFilter}"
                                      SelectedItem="{Binding SelectedSchoolYear, UpdateSourceTrigger=PropertyChanged}" />

                            <ComboBox Grid.Column="1" Background="#FFFFFF"
                                      Padding="5 0 10 0"
                                      Width="120" Height="30"
                                      Foreground="Black"
                                      materialDesign:HintAssist.Hint="Học kỳ"
                                      materialDesign:HintAssist.HintOpacity="1"
                                      Style="{StaticResource MaterialDesignComboBox}"
                                      FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                      Margin="10,0,20,0"
                                      HorizontalAlignment="Center"
                                      BorderBrush="#64748B" BorderThickness="1"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding SemesterFilter}"
                                      SelectedItem="{Binding SelectedSemester, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <StackPanel Orientation="Horizontal" Height="70">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="10 0 0 0"
                                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                       FontSize="18"
                                       Text="Nghỉ có phép"
                                       Foreground="#EDE995" />
                            <TextBox Background="#FFFFFF"
                                     Margin="20 0 0 0"
                                     Width="40"
                                     Height="22"
                                     IsReadOnly="True"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center" />

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Height="70">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="10 0 0 0"
                                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                       FontSize="18"
                                       Text="Nghỉ không phép"
                                       Foreground="#EDE995" />
                            <TextBox Background="#FFFFFF"
                                     Margin="20 0 0 0"
                                     Width="40"
                                     Height="22"
                                     IsReadOnly="True"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center" />

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Height="70">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="10 0 0 0"
                                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                       FontSize="18"
                                       Text="Xếp loại"
                                       Foreground="#EDE995" />

                            <ComboBox Background="#FFFFFF"
                                      Margin="20 0 0 0"
                                      Width="80"
                                      Height="22"
                                      IsReadOnly="True"
                                      IsEditable="False"
                                      BorderBrush="#CCCCCC"
                                      BorderThickness="1"
                                      ItemsSource="{Binding SomeCollectionProperty}"
                                      SelectedItem="{Binding SelectedItemProperty}"
                                      VerticalContentAlignment="Center"
                                      HorizontalContentAlignment="Center">
                            </ComboBox>


                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Height="70">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="10 0 0 0"
                                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                       FontSize="18"
                                       Text="Hạnh kiểm "
                                       Foreground="#EDE995" />
                            <ComboBox Background="#FFFFFF"
                                      Margin="20 0 0 0"
                                      Width="80"
                                      Height="22"
                                      IsReadOnly="True"
                                      IsEditable="False"
                                      BorderBrush="#CCCCCC"
                                      BorderThickness="1"
                                      ItemsSource="{Binding SomeCollectionProperty}"
                                      SelectedItem="{Binding SelectedItemProperty}"
                                      VerticalContentAlignment="Center"
                                      HorizontalContentAlignment="Center">
                            </ComboBox>


                        </StackPanel>
                        <TextBlock HorizontalAlignment="Left"
                                   Margin="10 0 0 5"
                                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                   FontSize="18"
                                   Text="Nhận xét: "
                                   Foreground="#EDE995" />

                        <TextBox Background="#FFFFFF"
                                 Height="150"
                                 Margin="10,0,10,10"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" 
                                 HorizontalContentAlignment="Left" />
                    </StackPanel>

                </Grid>
                <StackPanel Grid.ColumnSpan="2" 
                            Grid.Column="0" Grid.Row="1" 
                            Orientation="Horizontal" 
                            FlowDirection="RightToLeft">

                    <Button Margin="10"
                            VerticalAlignment="Center"
                            Width="120"
                            Height="40"
                            Background="#8DB575"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding CloseModalCommand}"
                            materialDesign:ButtonAssist.CornerRadius="20">

                        <TextBlock HorizontalAlignment="Center"
                                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                   FontSize="16"
                                   Text="Xác nhận"
                                   Foreground="Snow"
                                   Cursor="Hand"
                                   ToolTip="Nhấn để sửa năm học" />
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Border>
</UserControl>