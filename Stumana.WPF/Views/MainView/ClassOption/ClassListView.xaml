<UserControl x:Class="Stumana.WPF.Views.MainView.ClassOption.ClassListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Height="Auto" Width="1198">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Height="59"
            Width="1198"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                       Margin="10,0,0,0"
                       FontSize="40"
                       Text="Lớp học"
                       Foreground="Black"
                       Cursor="Hand"
                       ToolTip="Thiết lập điểm cho học sinh" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <Border BorderThickness="1" CornerRadius="10" BorderBrush="#152259" Margin="10 0 10 0">
                <GroupBox>
                    <GroupBox.Style>
                        <Style TargetType="GroupBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GroupBox">
                                        <StackPanel>
                                            <!-- Header GroupBox -->
                                            <ContentPresenter ContentSource="Header" />
                                            <!-- Nội dung GroupBox -->
                                            <ContentPresenter />
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupBox.Style>
                    <GroupBox.Header>
                        <Border Background="#059669" CornerRadius="10,10,0,0" Padding="10">
                            <TextBlock Text="Danh sách lớp"
                                       Foreground="White"
                                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                       FontSize="16"
                                       HorizontalAlignment="Center" />
                        </Border>
                    </GroupBox.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="502*" />
                            <ColumnDefinition Width="87*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!-- Hàng cho ComboBox -->
                            <RowDefinition Height="*" />
                            <!-- Hàng cho DataGrid -->
                            <RowDefinition Height="80" />
                            <!-- Hàng cho DataGrid -->
                        </Grid.RowDefinitions>

                        <!-- ComboBox -->
                        <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal">
                            <TextBlock Text="Năm Học:"
                                       Margin="10,0,0,0"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20" />

                            <ComboBox Background="#FFFFFF"
                                      Padding="10 0 10 0"
                                      Width="150" Height="30"
                                      IsEditable="False"
                                      Text="Năm học"
                                      Foreground="Black"
                                      FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                      Style="{StaticResource MaterialDesignComboBox}"
                                      Margin="10,10,0,10"
                                      HorizontalAlignment="Left"
                                      BorderBrush="#64748B" BorderThickness="1"
                                      ItemsSource="{Binding SchoolYearCollection}"
                                      SelectedItem="{Binding SelectedSchoolYear}">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Green" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>

                            <TextBlock Text="Khối:"
                                       Margin="30,0,0,0"
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20" />

                            <ComboBox Background="#FFFFFF"
                                      Padding="10 0 10 0"
                                      Width="150"
                                      Height="30"
                                      IsEditable="False"
                                      Text="Khối"
                                      Foreground="Black"
                                      FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                      Style="{StaticResource MaterialDesignComboBox}"
                                      Margin="10,10,0,10"
                                      HorizontalAlignment="Left"
                                      BorderBrush="#64748B" BorderThickness="1"
                                      ItemsSource="{Binding GradeCollection}"
                                      SelectedItem="{Binding SelectedGrade}">
                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Green" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>
                            </ComboBox>


                            <Button Margin="20,0,0,0"
                                    Width="Auto"
                                    Content="Add classroom" />
                        </StackPanel>
                        <!-- DataGrid -->
                        <Border Grid.Row="1" Grid.ColumnSpan="2">
                            <DataGrid Margin="10 20 0 0"
                                      AutoGenerateColumns="False"
                                      Height="400"
                                      HorizontalAlignment="Stretch"
                                      CanUserAddRows="False"
                                      ItemsSource="{Binding ClassroomCollection}">

                                <!-- Tạo Style cho Header với góc bo tròn -->
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridColumnHeader">
                                                    <Border CornerRadius="10,10,0,0"
                                                            Background="#152259"
                                                            BorderBrush="Transparent"
                                                            BorderThickness="0"
                                                            Height="34">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontSize" Value="16" />
                                        <Setter Property="FontFamily"
                                                Value="pack://application:,,,/Resource/Font/#Poppins Medium" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Style>
                                    <Style TargetType="DataGrid">
                                        <Setter Property="Background" Value="#F5F5F5" />
                                        <!-- Đổi màu nền -->
                                        <Setter Property="BorderBrush" Value="#152259" />
                                        <!-- Đổi màu viền -->
                                        <Setter Property="BorderThickness" Value="0" />
                                        <!-- Độ dày viền -->
                                    </Style>
                                </DataGrid.Style>

                                <DataGrid.CellStyle>
                                    <Style BasedOn="{StaticResource MaterialDesignDataGridCell}"
                                           TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    </Style>
                                </DataGrid.CellStyle>

                                <!-- Cột 1: Mã học sinh -->
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã lớp" Width="250" />
                                    <DataGridTextColumn Header="Lớp" Width="250" />
                                    <DataGridTextColumn Header="Sĩ số" Width="250" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>

                        <StackPanel Grid.ColumnSpan="2" Grid.Row="2" Orientation="Horizontal"
                                    FlowDirection="RightToLeft" Width="1034">
                            <Button x:Name="btClassExport"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    Width="120"
                                    Height="40"
                                    Background="#F59E0B"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="20">
                                <TextBlock HorizontalAlignment="Center"

                                           FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                           FontSize="16"
                                           Text="Xuất DS"
                                           Foreground="Snow"
                                           Cursor="Hand"
                                           ToolTip="Nhấn để thêm học sinh vào các lớp" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>