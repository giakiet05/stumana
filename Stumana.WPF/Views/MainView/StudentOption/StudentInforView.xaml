<UserControl x:Class="Stumana.WPF.Views.MainView.StudentOption.StudentInforView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stumana.WPF.Views.MainView.StudentOption"
             mc:Ignorable="d" 
             Height="572" d:DesignWidth="280">
    <Grid Background="#152259">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
   
            FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
            FontSize="20"
            Text="Tổng kết"
            Foreground="#EDE995"
            
             />
        </Grid>
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Height="70">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                           Margin="10 0 0 0"
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                FontSize="18"
                Text="Nghỉ có phép"
                Foreground="#EDE995"/>
                <TextBox Background="#FFFFFF"
                 Margin="20 0 0 0"        
                 Width="40"
                 Height="22"
                 IsReadOnly="True"
                 BorderBrush="#CCCCCC" 
                 BorderThickness="1"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="70">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="10 0 0 0"
                    FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                    FontSize="18"
                    Text="Nghỉ không phép"
                    Foreground="#EDE995"/>
                                <TextBox Background="#FFFFFF"
                     Margin="20 0 0 0"        
                     Width="40"
                     Height="22"
                     IsReadOnly="True"
                     BorderBrush="#CCCCCC" 
                     BorderThickness="1"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"/>
                
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="70">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                Margin="10 0 0 0"
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                FontSize="18"
                Text="Xếp loại"
                Foreground="#EDE995"/>
                
                    <ComboBox Background="#FFFFFF"
                 Margin="20 0 0 0"
                  Width="80"
                  Height="22"
                  IsReadOnly="True"
                  IsEditable="False"
                  BorderBrush="#CCCCCC"
                  BorderThickness="1"
                  ItemsSource="{Binding SomeCollectionProperty}"
                  SelectedItem="{Binding SelectedItemProperty}"
                  VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center">
                    </ComboBox>
                


            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="70">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                 Margin="10 0 0 0"
                 FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                 FontSize="18"
                 Text="Hạnh kiểm "
                 Foreground="#EDE995"/>
                  <ComboBox Background="#FFFFFF"
                  Margin="20 0 0 0"
                   Width="80"
                   Height="22"
                   IsReadOnly="True"
                   IsEditable="False"
                   BorderBrush="#CCCCCC"
                   BorderThickness="1"
                   ItemsSource="{Binding SomeCollectionProperty}"
                   SelectedItem="{Binding SelectedItemProperty}"
                   VerticalContentAlignment="Center"
                   HorizontalContentAlignment="Center">
                </ComboBox>


            </StackPanel>
            <TextBlock HorizontalAlignment="Left" 
              Margin="10 0 0 5"
              FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
              FontSize="18"
              Text="Nhận xét: "
              Foreground="#EDE995"/>
            <TextBox Background="#FFFFFF"
             
              Height="89"
            
              BorderBrush="#CCCCCC" 
              BorderThickness="1"
            
              HorizontalContentAlignment="Left"/>
            <ComboBox Background="#FFFFFF"
                Width="150"
                Height="30"
                IsEditable="True"
                Text="Năm học"
                Foreground="#C4C4C4"
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                Margin="0 20 20 0"      
              HorizontalAlignment="Right"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center" >
            </ComboBox>

        </StackPanel>
        
    </Grid>
</UserControl>
