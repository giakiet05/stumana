<UserControl x:Class="Stumana.WPF.Views.MainView.ScoreOption.EditScoreInputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stumana.WPF.Views.AuthencationViews"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Height="750" Width="1198">

    <Grid Background="White" >
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>

        <Border BorderThickness="1" CornerRadius="10" BorderBrush="#152259"  Margin="10 0 10 0">
            <GroupBox >
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GroupBox">
                                    <StackPanel>
                                        <!-- Header GroupBox -->
                                        <ContentPresenter ContentSource="Header" />
                                        <!-- Nội dung GroupBox -->
                                        <ContentPresenter />
                                    </StackPanel>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </GroupBox.Style>
                <GroupBox.Header>
                    <Border Background="#059669"  CornerRadius="10,10,0,0" Padding="10">
                        <TextBlock Text="Danh sách học sinh"
                       Foreground="White"
                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                       FontSize="16" 
                       HorizontalAlignment="Center"/>
                    </Border>
                </GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="900*"/>
                        <ColumnDefinition Width="500*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        
                        <RowDefinition Height="*" />
                        <!-- Hàng cho DataGrid -->
                        <RowDefinition Height="80" />
                        <!-- Hàng cho DataGrid -->
                    </Grid.RowDefinitions>

                    
                    
                    <!-- DataGrid -->
                    <DataGrid Margin="0,20,0,0" AutoGenerateColumns="False" Height="600" Width="736"
                  HorizontalAlignment="Center" CanUserAddRows="False" Grid.Row="0" Grid.Column="0">

                        <!-- Tạo Style cho Header với góc bo tròn -->
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridColumnHeader">
                                            <Border CornerRadius="10,10,0,0" 
                                        Background="#152259" 
                                        BorderBrush="Transparent" 
                                        BorderThickness="0"
                                        Height="34">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontSize" Value="16" />
                                <Setter Property="FontFamily" Value="pack://application:,,,/Resource/Font/#Poppins Medium"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Style>
                            <Style TargetType="DataGrid">
                                <Setter Property="Background" Value="#F5F5F5" />
                                <!-- Đổi màu nền -->
                                <Setter Property="BorderBrush" Value="#152259" />
                                <!-- Đổi màu viền -->
                                <Setter Property="BorderThickness" Value="0" />
                                <!-- Độ dày viền -->
                            </Style>
                        </DataGrid.Style>

                        <DataGrid.CellStyle>
                            <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            </Style>
                        </DataGrid.CellStyle>

                        <!-- Cột 1: Mã học sinh -->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Môn học" Width="250" />
                            <DataGridTextColumn Header="Thường xuyên" Width="250" />
                            <DataGridTextColumn Header="Giữa kì" Width="250" />
                            <DataGridTextColumn Header="Cuối kì" Width="250" />
                            <DataGridTextColumn Header="Trung bình" Width="250" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Background="#152259" Grid.Column="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>

                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
   
        FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
        FontSize="20"
        Text="Tổng kết"
        Foreground="#EDE995"
        
         />
                        </Grid>
                        <StackPanel Grid.Row="1">
                            <StackPanel Orientation="Horizontal" Height="70">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="10 0 0 0"
            FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
            FontSize="18"
            Text="Nghỉ có phép"
            Foreground="#EDE995"/>
                                <TextBox Background="#FFFFFF"
             Margin="20 0 0 0"        
             Width="40"
             Height="22"
             IsReadOnly="True"
             BorderBrush="#CCCCCC" 
             BorderThickness="1"
             VerticalContentAlignment="Center"
             HorizontalContentAlignment="Center"/>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Height="70">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                Margin="10 0 0 0"
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                FontSize="18"
                Text="Nghỉ không phép"
                Foreground="#EDE995"/>
                                <TextBox Background="#FFFFFF"
                 Margin="20 0 0 0"        
                 Width="40"
                 Height="22"
                 IsReadOnly="True"
                 BorderBrush="#CCCCCC" 
                 BorderThickness="1"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Center"/>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Height="70">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
            Margin="10 0 0 0"
            FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
            FontSize="18"
            Text="Xếp loại"
            Foreground="#EDE995"/>

                                <ComboBox Background="#FFFFFF"
             Margin="20 0 0 0"
              Width="80"
              Height="22"
              IsReadOnly="True"
              IsEditable="False"
              BorderBrush="#CCCCCC"
              BorderThickness="1"
              ItemsSource="{Binding SomeCollectionProperty}"
              SelectedItem="{Binding SelectedItemProperty}"
              VerticalContentAlignment="Center"
              HorizontalContentAlignment="Center">
                                </ComboBox>



                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Height="70">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
             Margin="10 0 0 0"
             FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
             FontSize="18"
             Text="Hạnh kiểm "
             Foreground="#EDE995"/>
                                <ComboBox Background="#FFFFFF"
              Margin="20 0 0 0"
               Width="80"
               Height="22"
               IsReadOnly="True"
               IsEditable="False"
               BorderBrush="#CCCCCC"
               BorderThickness="1"
               ItemsSource="{Binding SomeCollectionProperty}"
               SelectedItem="{Binding SelectedItemProperty}"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center">
                                </ComboBox>


                            </StackPanel>
                            <TextBlock HorizontalAlignment="Left" 
          Margin="10 0 0 5"
          FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
          FontSize="18"
          Text="Nhận xét: "
          Foreground="#EDE995"/>
                            <TextBox Background="#FFFFFF"
         
          Height="89"
        
          BorderBrush="#CCCCCC" 
          BorderThickness="1"
        
          HorizontalContentAlignment="Left"/>
                            <ComboBox Background="#FFFFFF"
            Width="150"
            Height="30"
            IsEditable="True"
            Text="Năm học"
            Foreground="#C4C4C4"
            FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
            Margin="0 20 20 0"      
          HorizontalAlignment="Right"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
                  >
                            </ComboBox>

                        </StackPanel>

                    </Grid>
                    <StackPanel Grid.ColumnSpan="2"   Grid.Row="1"  Orientation="Horizontal" FlowDirection="RightToLeft" Width="1034" >
                        <Button x:Name="btConfirmEditInputScore"
                                Margin="10"
                                VerticalAlignment="Center"

                                Width="120"
                                Height="40"
                                Background="#8DB575"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonAssist.CornerRadius="20">
                            <TextBlock HorizontalAlignment="Center"
       
                                FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                FontSize="16"
                                Text="Xác nhận"
                                Foreground="Snow"
                                Cursor="Hand"
                                ToolTip="Nhấn để sửa năm học" />
                        </Button>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Border>


    </Grid>
</UserControl>
