<UserControl x:Class="Stumana.WPF.Views.MainView.AccountOption.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1198">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/CommonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Information"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontSize="40"
                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                   Foreground="Black"
                   Margin="10 20 20 10">
        </TextBlock>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock
                    Text="Tên đăng nhập"
                    FontSize="25"
                    FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                    Foreground="#808080">

                </TextBlock>
                <Border
                    BorderThickness="2"
                    CornerRadius="4"
                    Background="#DCDCDC"
                    Padding="2"
                    Width="1000"
                    Height="Auto"
                    HorizontalAlignment="Left">
                    <TextBox Text="{Binding Username}"
                             FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                             Background="Transparent"
                             Foreground="#152259"
                             BorderThickness="0"
                             IsReadOnly="True"
                             FontSize="20"
                             Padding="5" />
                </Border>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10" />
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock
                    Text="Email"
                    FontSize="25"
                    FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                    Foreground="#808080">

                </TextBlock>
                <Border BorderThickness="2"
                        CornerRadius="4"
                        Background="#DCDCDC"
                        Padding="2"
                        Width="1000"
                        Height="Auto"
                        HorizontalAlignment="Left">
                    <TextBox Text="{Binding Email}"
                             FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                             Background="Transparent"
                             Foreground="#152259"
                             BorderThickness="0"
                             IsReadOnly="True"
                             FontSize="20"
                             Padding="5" />
                </Border>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Margin="10,10,10,10"
                    VerticalAlignment="Center"
                    Width="180"
                    Height="50"
                    FontSize="20"
                    Style="{StaticResource PrimaryButtonStyle}"
                    materialDesign:ButtonAssist.CornerRadius="30"
                    Content="Đổi mật khẩu"
                    Command="{Binding ChangePasswordCommand}">
            </Button>
            <Button Margin="10"
                    VerticalAlignment="Center"
                    Width="180"
                    Height="50"
                    Style="{StaticResource PrimaryButtonStyle}"
                    materialDesign:ButtonAssist.CornerRadius="30"
                    Content="Chỉnh sửa"
                    FontSize="20"
                    Command="{Binding EditCommand}">
            </Button>
            <Button Margin="10"
                    VerticalAlignment="Center"
                    Width="180"
                    Height="50"
                    Style="{StaticResource PrimaryButtonStyle}"
                    materialDesign:ButtonAssist.CornerRadius="30"
                    FontSize="20"
                    Command="{Binding CreateAccountCommand}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="AccountPlus" 
                                             Width="20" Height="20" 
                                             Margin="0,0,8,0" 
                                             VerticalAlignment="Center"/>
                    <TextBlock Text="Tạo tài khoản" 
                               FontSize="20"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>