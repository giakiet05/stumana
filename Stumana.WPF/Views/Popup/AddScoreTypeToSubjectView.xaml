<UserControl x:Class="Stumana.WPF.Views.Popup.AddScoreTypeToSubjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/CommonStyles.xaml" />
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/InputStyles.xaml" />
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/FilterStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="White" CornerRadius="20" 
            HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Thêm loại điểm vào môn"
                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                       FontSize="30"
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       Margin="20,20,0,0" />

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <DataGrid Margin="10 20 10 0"
                          Width="600" Height="300"
                          AutoGenerateColumns="False"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          ItemsSource="{Binding StudentChoiceTableView}">

                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Chọn" Width="100" IsReadOnly="False" Binding="{Binding IsSelected}"/>
                        <DataGridTextColumn Header="Loại điểm" Width="3*"/>
                        <DataGridTextColumn Header="Hệ số" Width="*"/>
                    </DataGrid.Columns>

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Border Background="#152259"
                                                BorderBrush="Transparent"
                                                BorderThickness="0"
                                                Height="34"
                                                Padding="10,0,10,0"
                                                CornerRadius="10,10,0,0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="FontFamily"
                                    Value="pack://application:,,,/Resource/Font/#Poppins Medium" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Style>
                        <Style TargetType="DataGrid">
                            <Setter Property="Background" Value="#F5F5F5" />
                            <!-- Đổi màu nền -->
                            <Setter Property="BorderBrush" Value="#152259" />
                            <!-- Đổi màu viền -->
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </DataGrid.Style>

                    <DataGrid.CellStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}"
                               TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" FlowDirection="LeftToRight">
                <Button Width="130"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Content="Lưu thay đổi"
                        FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                        Margin="20"
                        FontSize="18"
                        Command="{Binding SaveChangeCommand}" />

                <Button Width="130"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Content="Hủy"
                        FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                        Command="{Binding CancelCommand}"
                        Margin="20"
                        FontSize="18" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>