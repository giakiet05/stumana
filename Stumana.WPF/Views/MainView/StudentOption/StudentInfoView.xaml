<UserControl x:Class="Stumana.WPF.Views.MainView.StudentOption.StudentInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:helpers="clr-namespace:Stumana.WPF.Helpers"
             mc:Ignorable="d">

    <Border BorderThickness="1"
            CornerRadius="10"
            BorderBrush="#152259"
            Height="Auto" Width="900"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="10 0 10 0"
            Background="White">

        <GroupBox>
            <GroupBox.Style>
                <Style TargetType="GroupBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="GroupBox">
                                <StackPanel>
                                    <!-- Header GroupBox -->
                                    <ContentPresenter ContentSource="Header" />
                                    <!-- Nội dung GroupBox -->
                                    <ContentPresenter />
                                </StackPanel>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </GroupBox.Style>
            <GroupBox.Header>
                <Border Background="#059669" CornerRadius="10,10,0,0" Padding="10">
                    <TextBlock Text="Bảng điểm học sinh"
                               Foreground="White"
                               FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                               FontSize="18"
                               HorizontalAlignment="Center" />
                </Border>
            </GroupBox.Header>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Mã học sinh:"
                                   Margin="10,0,0,0"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20" />

                        <TextBlock Text="{Binding StudentId}"
                                   Margin="10,0,0,0"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20" />
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Họ và tên:"
                                   Margin="10,0,0,0"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20" />

                        <TextBlock Text="{Binding StudentName}"
                                   Margin="10,0,0,0"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20" />
                    </StackPanel>
                </Grid>

                <DataGrid Grid.Row="1" Grid.Column="0"
                          ScrollViewer.HorizontalScrollBarVisibility="Visible"
ScrollViewer.VerticalScrollBarVisibility="Auto"
ScrollViewer.CanContentScroll="False"
                          Margin="10,10,0,0"
                          AutoGenerateColumns="True"
                          HorizontalAlignment="Stretch"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          FontSize="18"
                          CellStyle="{StaticResource DataGridCellStyle}"
                          RowStyle="{StaticResource DataGridRowStyle}"
                          ItemsSource="{Binding TableView}">
                </DataGrid>

                <Grid Grid.Row="1" Grid.Column="1"
                      Background="#152259"
                      Margin="10,10,10,0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                   FontSize="20"
                                   Text="Tổng kết"
                                   Foreground="#EDE995" />
                    </Grid>

                    <StackPanel Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0" Background="#FFFFFF"
                                      Padding="5 0 10 0"
                                      Width="120" Height="30"
                                      Foreground="Black"
                                      materialDesign:HintAssist.Hint="Năm học"
                                      materialDesign:HintAssist.HintOpacity="1"
                                      Style="{StaticResource MaterialDesignComboBox}"
                                      FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                      Margin="10,0,20,0"
                                      HorizontalAlignment="Center"
                                      BorderBrush="#64748B" BorderThickness="1"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding SchoolYearFilter}"
                                      SelectedItem="{Binding SelectedSchoolYear, UpdateSourceTrigger=PropertyChanged}" />

                            <ComboBox Grid.Column="1" Background="#FFFFFF"
                                      Padding="5 0 10 0"
                                      Width="120" Height="30"
                                      Foreground="Black"
                                      materialDesign:HintAssist.Hint="Học kỳ"
                                      materialDesign:HintAssist.HintOpacity="1"
                                      Style="{StaticResource MaterialDesignComboBox}"
                                      FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                      Margin="10,0,20,0"
                                      HorizontalAlignment="Center"
                                      BorderBrush="#64748B" BorderThickness="1"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding SemesterFilter}"
                                      SelectedItem="{Binding SelectedSemester, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <StackPanel Orientation="Horizontal" Height="70">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="10 10 0 0"
                                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                       FontSize="18"
                                       Text="Lớp"
                                       Foreground="#EDE995" />

                            <TextBox Margin="10 10 0 0"
                                     Background="#CCCCCC"
                                     Foreground="Black"
                                     Width="100" Height="25"
                                     FontSize="14"
                                     IsReadOnly="True"
                                     IsEnabled="False"
                                     Text="{Binding ClassroomName}"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Height="70">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="10 10 0 0"
                                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                       FontSize="18"
                                       Text="Số ngày nghỉ"
                                       Foreground="#EDE995" />

                            <TextBox Background="#FFFFFF"
                                     Margin="10 10 0 0"
                                     Width="50" Height="25"
                                     Text="{Binding Absence, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center">

                                <b:Interaction.Behaviors>
                                    <helpers:NumericIntInputBehavior />
                                </b:Interaction.Behaviors>
                            </TextBox>

                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Height="70">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="10 0 0 0"
                                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                       FontSize="18"
                                       Text="Xếp loại"
                                       Foreground="#EDE995" />

                            <TextBox Margin="10 10 0 0"
                                     Background="#CCCCCC"
                                     Foreground="Black"
                                     Width="100" Height="25"
                                     FontSize="14"
                                     IsReadOnly="True"
                                     IsEnabled="False"
                                     Text="{Binding Grading}"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"/>      

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Height="70">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="10 0 0 0"
                                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                       FontSize="18"
                                       Text="Hạnh kiểm "
                                       Foreground="#EDE995" />

                            <ComboBox Background="#FFFFFF"
                                      Padding="5 0 10 0"
                                      Width="100" Height="25"
                                      Foreground="Black"
                                      Style="{StaticResource MaterialDesignComboBox}"
                                      FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                      Margin="10,0,20,0"
                                      HorizontalAlignment="Center"
                                      BorderBrush="#64748B" BorderThickness="1"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding ConductCollection}"
                                      SelectedItem="{Binding SelectedConduct, UpdateSourceTrigger=PropertyChanged}" />


                        </StackPanel>
                        <TextBlock HorizontalAlignment="Left"
                                   Margin="10 10 0 5"
                                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                   FontSize="18"
                                   Text="Nhận xét: "
                                   Foreground="#EDE995" />

                        <TextBox Background="#FFFFFF"
                                 Height="130"
                                 Margin="10,0,10,10"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="1"
                                 Text="{Binding Evaluation, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalContentAlignment="Left" />


                    </StackPanel>
                </Grid>

                <StackPanel Grid.Column="0" Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            FlowDirection="RightToLeft">

                    <Button Margin="10"
                            VerticalAlignment="Center"
                            Width="120"
                            Height="40"
                            Background="#8DB575"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding CloseModalCommand}"
                            materialDesign:ButtonAssist.CornerRadius="20">

                        <TextBlock HorizontalAlignment="Center"
                                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                   FontSize="16"
                                   Text="Thoát"
                                   Foreground="Snow"
                                   Cursor="Hand"
                                    />
                    </Button>
                    <Button Margin="10"
                            VerticalAlignment="Center"
                            Width="120"
                            Height="40"
                            Background="#8DB575"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding SaveCommand}"
                            materialDesign:ButtonAssist.CornerRadius="20">

                        <TextBlock HorizontalAlignment="Center"
                                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                   FontSize="16"
                                   Text="Lưu"
                                   Foreground="Snow"
                                   Cursor="Hand"
                                    />
                    </Button>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Border>
</UserControl>