<UserControl x:Class="Stumana.WPF.Views.Window1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <Grid Background="White">
        <Border BorderThickness="1" CornerRadius="10" BorderBrush="#152259" Margin="0 0 0 0">
            <GroupBox>
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GroupBox">
                                    <StackPanel>
                                        <ContentPresenter ContentSource="Header" />
                                        <ContentPresenter />
                                    </StackPanel>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </GroupBox.Style>
                <GroupBox.Header>
                    <Border Background="#059669" CornerRadius="10,10,0,0" Padding="10">
                        <TextBlock Text="Danh sách học sinh"
                                   Foreground="White"
                                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                   FontSize="16"
                                   HorizontalAlignment="Center" />
                    </Border>
                </GroupBox.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,10">
                        <ComboBox Background="#FFFFFF"
                                  Padding="5 0 10 0"
                                  Width="150"
                                  Height="30"
                                  IsEditable="True"
                                  Text="Năm học"
                                  Foreground="#C4C4C4"
                                  FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                  Margin="20,0,20,0"
                                  HorizontalAlignment="Left"
                                  BorderBrush="#64748B" BorderThickness="1" />
                        <ComboBox Background="#FFFFFF"
                                  Padding="10 0 10 0"
                                  Width="150"
                                  Height="30"
                                  IsEditable="True"
                                  Text="Khối"
                                  Foreground="#C4C4C4"
                                  FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                  Margin="20,0,20,0"
                                  HorizontalAlignment="Left"
                                  BorderBrush="#64748B" BorderThickness="1" />
                        <ComboBox Background="#FFFFFF"
                                  Padding="10 0 10 0"
                                  Width="150"
                                  Height="30"
                                  IsEditable="True"
                                  Text="Lớp"
                                  Foreground="#C4C4C4"
                                  FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                  Margin="20,0,20,0"
                                  HorizontalAlignment="Left"
                                  BorderBrush="#64748B" BorderThickness="1" />
                        <ComboBox Background="#FFFFFF"
                                  Padding="10 0 10 0"
                                  Width="150"
                                  Height="30"
                                  IsEditable="True"
                                  Text="Học kì"
                                  Foreground="#C4C4C4"
                                  FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                  Margin="20,0,20,0"
                                  HorizontalAlignment="Left"
                                  BorderBrush="#64748B" BorderThickness="1" />
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Vertical">
                        <Border CornerRadius="8" Height="53" Width="1000" Background="#FCFAFA" BorderThickness="1"
                                BorderBrush="#C4C4C4">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                                <Button Style="{StaticResource MaterialDesignIconButton}">
                                    <materialDesign:PackIcon Kind="Magnify" Width="24" Height="24" Foreground="#8A8A8A" />
                                </Button>

                                <TextBox FontSize="14"
                                         Foreground="#8A8A8A"
                                         FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Tìm kiếm"
                                         materialDesign:TextFieldAssist.HasClearButton="True" Width="899"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                                </TextBox>
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding FilterCommand}">
                                    <materialDesign:PackIcon Kind="TuneVariant" Width="30" Height="30"
                                                             Foreground="#C5CAE9" />
                                </Button>
                            </StackPanel>
                        </Border>

                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto">
                            <DataGrid Margin="10 20 0 0"
                                      AutoGenerateColumns="True"
                                      Background="White"
                                      Height="471"
                                      HorizontalAlignment="Stretch"
                                      CanUserAddRows="False"
                                      ItemsSource="{Binding TableView}">
                                <!-- Tạo Style cho Header với góc bo tròn -->
                                <DataGrid.Resources>

                                    <Style TargetType="DataGridCell" x:Key="ModifiedCellStyle">
                                        <Setter Property="Background" Value="LightYellow" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Row.RowState}" Value="Modified">
                                                <Setter Property="Background" Value="LightGreen" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>

                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Background" Value="White"></Setter>
                                    </Style>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridColumnHeader">
                                                    <Border CornerRadius="10,10,0,0"
                                                            Background="#152259"
                                                            BorderBrush="Transparent"
                                                            BorderThickness="0"
                                                            Height="Auto" Padding="10">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontSize" Value="16" />
                                        <Setter Property="FontFamily"
                                                Value="pack://application:,,,/Resource/Font/#Poppins Medium" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>

                                </DataGrid.Resources>
                                <DataGrid.Style>
                                    <Style TargetType="DataGrid">
                                        <Setter Property="Background" Value="#F5F5F5" />
                                        <!-- Đổi màu nền -->
                                        <Setter Property="BorderBrush" Value="#152259" />
                                        <!-- Đổi màu viền -->
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Style>
                                </DataGrid.Style>
                                <DataGrid.CellStyle>
                                    <Style BasedOn="{StaticResource MaterialDesignDataGridCell}"
                                           TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    </Style>
                                </DataGrid.CellStyle>
                            </DataGrid>
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Border>
    </Grid>
</UserControl>