<UserControl x:Class="Stumana.WPF.Views.Popup.AddStudentViewToClass"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stumana.WPF.Views.Popup"
             mc:Ignorable="d" 
             d:DesignHeight="547" d:DesignWidth="969"
             Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/CommonStyles.xaml"/>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/InputStyles.xaml"/>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/FilterStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Thêm học sinh"
                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                   FontSize="35"
                   FontWeight="SemiBold"
                   Foreground="#333333"
                   Margin="83,102,0,0"/>

        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    Margin="83,20,0,0">

            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="ID"
                           FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                           Foreground="#666666"
                           FontSize="13"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="IdTextBox"
                         Text="{Binding StudentId}"
                         FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                         Width="300"
                         Height="35"
                         Padding="5"
                         BorderBrush="#DCDCDC"
                         BorderThickness="1"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Họ"
                           FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                           Foreground="#666666"
                           FontSize="13"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="FirstNameTextBox"
                         Text="{Binding FirstName}"
                         FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                         Width="300"
                         Height="35"
                         Padding="5"
                         BorderBrush="#DCDCDC"
                         BorderThickness="1"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Tên"
                           FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                           Foreground="#666666"
                           FontSize="13"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="LastNameTextBox"
                         Text="{Binding LastName}"
                         FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                         Width="300"
                         Height="35"
                         Padding="5"
                         BorderBrush="#DCDCDC"
                         BorderThickness="1"/>
            </StackPanel>

        </StackPanel>

        <Button Grid.Row="2"
                Width="131"
                Height="45"
                Style="{StaticResource PrimaryButtonStyle}" 
                Content="Thêm"
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                Command="{Binding AddStudentCommand}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,70,100,0"
                FontSize="20"/>
    </Grid>
</UserControl>