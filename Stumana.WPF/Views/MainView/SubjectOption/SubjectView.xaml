<UserControl x:Class="Stumana.WPF.Views.MainView.SubjectOption.SubjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignWidth="1200" d:DesignHeight="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/CommonStyles.xaml" />
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/InputStyles.xaml" />
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/FilterStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" BorderThickness="1" CornerRadius="10" BorderBrush="#152259" Margin="10 10 10 0">
            <GroupBox VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GroupBox">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <ContentPresenter Grid.Row="0" ContentSource="Header" />
                                        <ContentPresenter Grid.Row="1" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                </GroupBox.Style>
                <GroupBox.Header>
                    <Border Background="#059669"
                            CornerRadius="10,10,0,0"
                            Padding="10"
                            HorizontalAlignment="Stretch">
                        <TextBlock Text="Danh sách môn học"
                                   Foreground="White"
                                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                   FontSize="20"
                                   HorizontalAlignment="Center" />
                    </Border>
                </GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- ComboBox -->
                    <Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Năm Học:"
                                   Margin="10,0,0,0"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20" />

                        <ComboBox Grid.Column="1" Background="#FFFFFF"
                                  Padding="10 0 10 0"
                                  Width="150" Height="30"
                                  IsEditable="False"
                                  Text="Năm học"
                                  Foreground="Black"
                                  FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                  Style="{StaticResource MaterialDesignComboBox}"
                                  Margin="10"
                                  HorizontalAlignment="Left"
                                  BorderBrush="#64748B" BorderThickness="1"
                                  ItemsSource="{Binding SchoolYearCollection}"
                                  SelectedItem="{Binding SelectedSchoolYear}">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Green" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <TextBlock Grid.Column="2" Text="Khối:"
                                   Margin="30,0,0,0"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20" />

                        <Border Grid.Column="3" VerticalAlignment="Center"
                                BorderBrush="#64748B"
                                BorderThickness="1"
                                Width="150" Height="30"
                                Margin="10">
                            <materialDesign:PopupBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                     materialDesign:HintAssist.FloatingHintHorizontalAlignment="Stretch"
                                                     FontSize="12"
                                                     Foreground="Black"
                                                     PopupMode="Click"
                                                     StaysOpen="True"
                                                     materialDesign:RippleAssist.RippleSizeMultiplier="0.2"
                                                     materialDesign:RippleAssist.IsCentered="False">
                                <materialDesign:PopupBox.ToggleContent>
                                    <Grid>
                                        <TextBlock Margin="10,0,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   FontSize="13"
                                                   Width="150"
                                                   Foreground="Black"
                                                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium" />
                                        <TextBlock Text="▼"
                                                   FontSize="6"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,13,0"
                                                   Foreground="Gray">
                                            <TextBlock.RenderTransform>
                                                <ScaleTransform ScaleX="1.5" ScaleY="1" />
                                            </TextBlock.RenderTransform>
                                        </TextBlock>
                                    </Grid>
                                </materialDesign:PopupBox.ToggleContent>
                                <ItemsControl Width="150" ItemsSource="{Binding GradeFilter}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <CheckBox Height="30"
                                                          Margin="10,0,0,0"
                                                          Content="{Binding Name}"
                                                          FontSize="14"
                                                          IsChecked="{Binding IsChecked, Mode=TwoWay}">
                                                    <b:Interaction.Triggers>
                                                        <b:EventTrigger EventName="Checked">
                                                            <b:InvokeCommandAction
                                                                Command="{Binding DataContext.FilterGradeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                CommandParameter="{Binding}" />
                                                        </b:EventTrigger>
                                                        <b:EventTrigger EventName="Unchecked">
                                                            <b:InvokeCommandAction
                                                                Command="{Binding DataContext.FilterGradeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                CommandParameter="{Binding}" />
                                                        </b:EventTrigger>
                                                    </b:Interaction.Triggers>
                                                </CheckBox>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </materialDesign:PopupBox>
                        </Border>

                        <Border Grid.Column="4" CornerRadius="8"
                                Margin="20,0,20,0"
                                HorizontalAlignment="Stretch"
                                Height="40"
                                Background="#FCFAFA"
                                BorderThickness="1"
                                BorderBrush="#C4C4C4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0" Kind="Magnify"
                                                         Width="25" Height="25"
                                                         Margin="5"
                                                         Foreground="#8A8A8A"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center" />

                                <TextBox Grid.Column="1" FontSize="16"
                                         Foreground="Black"
                                         FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Tìm kiếm môn học"
                                         materialDesign:TextFieldAssist.HasClearButton="True"
                                         Padding="20,5,5,5">
                                </TextBox>
                            </Grid>
                        </Border>
                    </Grid>
                    <!-- DataGrid -->
                    <Border Grid.Row="1" Grid.Column="0" Margin="0,0,30,0" VerticalAlignment="Stretch">
                        <DataGrid Margin="10 20 0 0"
                                  AutoGenerateColumns="False"
                                  Width="490"
                                  HorizontalAlignment="Stretch"
                                  CanUserAddRows="False"
                                  ItemsSource="{Binding ClassTableView}"
                                  SelectedItem="{Binding SelectedClass, Mode=TwoWay}">


                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Khối" Width="*" IsReadOnly="True" />
                                <DataGridTextColumn Header="Tên môn học" Width="*" />
                                <DataGridTextColumn Header="Điểm đạt" Width="*" />
                            </DataGrid.Columns>

                            <!-- Tạo Style cho Header với góc bo tròn -->
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridColumnHeader">
                                                <Border Background="#152259"
                                                        BorderBrush="Transparent"
                                                        BorderThickness="0"
                                                        Height="34"
                                                        Padding="10,0,10,0"
                                                        CornerRadius="10,10,0,0">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="FontFamily"
                                            Value="pack://application:,,,/Resource/Font/#Poppins Medium" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Style>
                                <Style TargetType="DataGrid">
                                    <Setter Property="Background" Value="#F5F5F5" />
                                    <!-- Đổi màu nền -->
                                    <Setter Property="BorderBrush" Value="#152259" />
                                    <!-- Đổi màu viền -->
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                            </DataGrid.Style>

                            <DataGrid.CellStyle>
                                <Style BasedOn="{StaticResource MaterialDesignDataGridCell}"
                                       TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>
                    </Border>
                    <ScrollViewer Grid.Row="1" Grid.Column="1"
                                  HorizontalScrollBarVisibility="Auto"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch">
                        <Border HorizontalAlignment="Stretch">
                            <DataGrid Margin="0 20 0 0"
                                      AutoGenerateColumns="False"
                                      HorizontalAlignment="Stretch"
                                      CanUserAddRows="False"
                                      IsReadOnly="True">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Tên loại điểm" Width="*" MinWidth="200"
                                                        IsReadOnly="True" />
                                    <DataGridTextColumn Header="Hệ số" Width="*" MinWidth="200" IsReadOnly="True" />
                                    <DataGridTextColumn Header="Số lượng điểm" Width="*" MinWidth="200" />
                                </DataGrid.Columns>

                                <!-- Tạo Style cho Header với góc bo tròn -->
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridColumnHeader">
                                                    <Border Background="#152259"
                                                            BorderBrush="Transparent"
                                                            BorderThickness="0"
                                                            Height="34"
                                                            CornerRadius="10,10,0,0"
                                                            Padding="10,0,10,0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontSize" Value="16" />
                                        <Setter Property="FontFamily"
                                                Value="pack://application:,,,/Resource/Font/#Poppins Medium" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Style>
                                    <Style TargetType="DataGrid">
                                        <Setter Property="Background" Value="#F5F5F5" />
                                        <!-- Đổi màu nền -->
                                        <Setter Property="BorderBrush" Value="#152259" />
                                        <!-- Đổi màu viền -->
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Style>
                                </DataGrid.Style>

                                <DataGrid.CellStyle>
                                    <Style BasedOn="{StaticResource MaterialDesignDataGridCell}"
                                           TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    </Style>
                                </DataGrid.CellStyle>
                            </DataGrid>
                        </Border>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    FlowDirection="RightToLeft">
            <Button Margin="10,15,10,15"
                    Width="230"
                    FontSize="18"
                    Content="Thêm loại điểm vào môn"
                    Padding="10"

                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding AddStudentToClassCommand}" />
            <Button Margin="10,15,10,15"
                    Width="200"
                    FontSize="18"
                    Content="Chỉnh sửa loại điểm"
                    Padding="10"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding AddClassroomCommand}" />
            <Button Margin="10,15,10,15"
                    Width="150"
                    FontSize="18"
                    Content="Thêm môn học"
                    Padding="10"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding AddClassroomCommand}" />
        </StackPanel>
    </Grid>
</UserControl>