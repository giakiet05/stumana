<UserControl x:Class="Stumana.WPF.Views.MainView.SettleOption.SemesterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stumana.WPF.Views.AuthencationViews"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Height="720" Width="1198">

    <Grid Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="82"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
          
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"          
            Height="59"
            Width="1198"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button x:Name="btSemetser"
             Margin="10"
             VerticalAlignment="Center"
        
             Width="179"
             Height="39"
             Background="#EDE995"
             Style="{StaticResource MaterialDesignRaisedButton}"
             materialDesign:ButtonAssist.CornerRadius="4">
                <TextBlock HorizontalAlignment="Center"
   
                 FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                FontSize="24"
                Text="Năm học"
                Foreground="Snow"
                Cursor="Hand"
                ToolTip="Thiết lập năm học" />
            </Button>
            <Button x:Name="btGrade"
             Margin="10"
             VerticalAlignment="Center"
        
             Width="179"
             Height="39"
             Background="#CCCCCC"
             Style="{StaticResource MaterialDesignRaisedButton}"
             materialDesign:ButtonAssist.CornerRadius="4">
                <TextBlock HorizontalAlignment="Center"
   
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
            FontSize="24"
            Text="Khối lớp"
            Foreground="Snow"
            Cursor="Hand"
            ToolTip="Thiết lập khối lớp" />
            </Button>
            <Button x:Name="btMajo"
             Margin="10"
             VerticalAlignment="Center"
        
             Width="179"
             Height="39"
             Background="#CCCCCC"
             Style="{StaticResource MaterialDesignRaisedButton}"
             materialDesign:ButtonAssist.CornerRadius="4">
                <TextBlock HorizontalAlignment="Center"
   
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
            FontSize="24"
            Text="Bộ môn"
            Foreground="Snow"
            Cursor="Hand"
            ToolTip="Thiết lập bộ môn" />
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <Border CornerRadius="8" Height="53" Width="1000" Background="#FCFAFA" BorderThickness="1" BorderBrush="#C4C4C4">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon Kind="Magnify" Width="24" Height="24"  Foreground="#8A8A8A"/>
                    </Button>

                    <TextBox Width="899"
                 HorizontalAlignment="Left"
                
                 FontSize="14"
                 Foreground="#8A8A8A"
                 FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                materialDesign:HintAssist.Hint="Tìm kiếm"
                materialDesign:TextFieldAssist.HasClearButton="True" />

                </StackPanel>
            </Border>
            
            <DataGrid Margin="10 20 0 0" AutoGenerateColumns="False" Height="471" Width="1100"
          HorizontalAlignment="Left" CanUserAddRows="False">

                <!-- Tạo Style cho Header với góc bo tròn -->
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border CornerRadius="10,10,0,0" 
                                        Background="#152259" 
                                    BorderBrush="Transparent" 
                                    BorderThickness="0"
                                            Height="34"
                                    >
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="FontFamily" Value="pack://application:,,,/Resource/Font/#Poppins Medium"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                    </Style>
                    
                </DataGrid.Resources>
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="Background" Value="#F5F5F5" />
                        <!-- Đổi màu nền -->
                        <Setter Property="BorderBrush" Value="#152259" />
                        <!-- Đổi màu viền -->
                        <Setter Property="BorderThickness" Value="0" />
                        <!-- Độ dày viền -->
                        
                    </Style>
                </DataGrid.Style>
                <DataGrid.CellStyle>
                    <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    </Style>
                </DataGrid.CellStyle>
                <!-- Cột 1: Tên -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã năm học" Width="250" />
                    <DataGridTextColumn Header="Tên năm học" Width="250" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel   Grid.Row="3"  Orientation="Horizontal" FlowDirection="RightToLeft" Width="1034" >
                <Button x:Name="btEditSemester"
    Margin="10"
    VerticalAlignment="Center"

    Width="99"
    Height="40"
    Background="#6C6C6C"
    Style="{StaticResource MaterialDesignRaisedButton}"
    materialDesign:ButtonAssist.CornerRadius="20">
                    <TextBlock HorizontalAlignment="Center"
       
        FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
       FontSize="16"
       Text="Sửa"
       Foreground="Snow"
       Cursor="Hand"
       ToolTip="Nhấn để sửa năm học" />
                </Button>
                <Button x:Name="btDeleteSemester"
Margin="10"
VerticalAlignment="Center"

Width="99"
Height="40"
Background="#E17D7D"
Style="{StaticResource MaterialDesignRaisedButton}"
materialDesign:ButtonAssist.CornerRadius="20">
                    <TextBlock HorizontalAlignment="Center"
   
    FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
   FontSize="16"
   Text="Xóa"
   Foreground="Snow"
   Cursor="Hand"
   ToolTip="Nhấn để xóa năm học" />
                </Button>
                <Button x:Name="btAddSemester"
Margin="10"
VerticalAlignment="Center"

Width="99"
Height="40"
Background="#8DB575"
Style="{StaticResource MaterialDesignRaisedButton}"
materialDesign:ButtonAssist.CornerRadius="20">
                    <TextBlock HorizontalAlignment="Center"
   
    FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
   FontSize="16"
   Text="Thêm"
   Foreground="Snow"
   Cursor="Hand"
   ToolTip="Nhấn để thêm năm học" />
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
