<UserControl x:Class="Stumana.WPF.Views.AuthencationViews.SignIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stumana.WPF.Views.AuthencationViews"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" Width="1440">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Image Source="/Resource/Image/LoginImage.png" Stretch="UniformToFill" Grid.Column="0" />

        <Border Grid.Column="1" Background="#FFFFFF" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="431" Height="635.12" Orientation="Vertical">
                    <TextBlock Text="Sign in"
                               FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                               FontSize="30"
                               Style="{StaticResource MaterialDesignHeadline1TextBlock}"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                               FontWeight="Medium" />

                    <StackPanel Orientation="Vertical" Width="431" Height="220" Margin="0 50 0 0">
                        <TextBlock Text="Email"
                                   FontWeight="Medium"
                                   FontSize="13"
                                   Width="64"
                                   Height="20"
                                   HorizontalAlignment="Left"
                                   Foreground="#999999"
                                   FontFamily="Poppins" />

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="88.5">
                            <materialDesign:PackIcon Kind="Email" Width="50" Height="50" Foreground="#000842" Margin="0,20,10,0" />
                            <TextBox x:Name="tbUser"
                                     materialDesign:HintAssist.Hint="Enter username/Email"
                                     Width="361"
                                     Foreground="#000842"
                                     FontSize="20"
                                     FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                                     Background="{DynamicResource MaterialDesignPaper}"
                                     Padding="10"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                     BorderThickness="0" />
                        </StackPanel>

                        <TextBlock Text="Password"
                                   FontWeight="Medium"
                                   FontSize="13"
                                   Width="64"
                                   Height="20"
                                   HorizontalAlignment="Left"
                                   Foreground="#999999"
                                   FontFamily="Poppins" />

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="88.5">
                            <materialDesign:PackIcon Kind="Password" Width="50" Height="50" Foreground="#000842" Margin="0,20,10,0" />
                            <PasswordBox x:Name="pbPassword"
                                         materialDesign:HintAssist.Hint="Enter your password"
                                         Width="361"
                                         Foreground="#000842"
                                         FontSize="20"
                                         FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                                         Background="{DynamicResource MaterialDesignPaper}"
                                         Padding="10"
                                         Style="{StaticResource MaterialDesignFloatingHintRevealPasswordBox}"
                                         materialDesign:TextFieldAssist.UnderlineBrush="Black"
                                         BorderThickness="0" />
                        </StackPanel>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource MaterialDesignCheckBox}">
                            <TextBlock Foreground="Purple"
                                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Light"
                                       TextDecorations="Underline"
                                       Text="Remember me" />
                        </CheckBox>

                        <TextBlock Grid.Column="1"
                                   Foreground="DimGray"
                                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Light"
                                   TextDecorations="Underline"
                                   Text="Forgot password?"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" />
                    </Grid>

                    <Button x:Name="btLogin"
                            Margin="0 50 0 0"
                            VerticalAlignment="Center"
                            Width="429"
                            Height="53"
                            Background="#0C21C1"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="32">
                        <TextBlock HorizontalAlignment="Center"
                                   Width="46"
                                   Height="26"
                                    FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                   FontSize="17"
                                   Text="Login"
                                   Foreground="Snow"
                                   Cursor="Hand"
                                   ToolTip="Nhấn để đăng nhập" />
                    </Button>

                    <TextBlock Margin="15 30 0 0"
                               Text="or if you dont have an account"
                               FontSize="16"
                               Width="250"
                               Height="20"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#999999"
                               FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium" />

                    <TextBlock Margin="100 11 0 0"
                               Text="Register here !"
                               FontSize="16"
                               Width="250"
                               Height="20"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#0C21C1"
                               FontFamily="pack://application:,,,/Resource/Font/#Poppins Bold"
                               TextDecorations="Underline" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
