<UserControl x:Class="Stumana.WPF.Views.MainView.AccountOption.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Height="720" Width="1198">

    <Grid Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="82"></RowDefinition>
            <RowDefinition Height="10"></RowDefinition>
            <RowDefinition Height="520"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Width="238"
            Height="82"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Orientation="Vertical">
            <TextBlock
                Text="Information"
                FontSize="20"
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                Foreground="#808080"
                 Margin="50 20 20 0"
             
                >

            </TextBlock>
            <Rectangle  Fill="#80007C" Width="161" Height="1" Margin="0,2,0,10" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock
                Text="Tên đăng nhập"
                FontSize="20"
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                Foreground="#808080">

                </TextBlock>
                <Border 
                    BorderThickness="2"
                    CornerRadius="4"  
                    Background="#DCDCDC"
                    Padding="2"
                    Width="216"
                    Height="43"
                    HorizontalAlignment="Left">
                    <TextBox Text="Admin123"
                           FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                             Background="Transparent"
                             Foreground="#152259"
                             BorderThickness="0"
                             IsReadOnly="True"
                             FontSize="18"
                             Padding="5" />
                </Border>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock
                Text="ID"
                FontSize="20"
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                Foreground="#808080">

                </TextBlock>
                <Border 
                BorderThickness="2"
                CornerRadius="4"  
                Background="#DCDCDC"
                Padding="2"
                Width="400"
                Height="43"
                HorizontalAlignment="Left">
                    <TextBox Text="235208871412475"
               FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                 Background="Transparent"
                 Foreground="#152259"
                 BorderThickness="0"
                 IsReadOnly="True"
                 FontSize="18"
                 Padding="5"  />
                </Border>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock
                Text="Email"
                FontSize="20"
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                Foreground="#808080">

                </TextBlock>
                <Border 
                BorderThickness="2"
                CornerRadius="4"  
                Background="#DCDCDC"
                Padding="2"
                Width="492"
                Height="43"
                HorizontalAlignment="Left">
                    <TextBox Text="Admin123@gm.uit.edu.vn"
               FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                 Background="Transparent"
                 Foreground="#152259"
                 BorderThickness="0"
                 IsReadOnly="True"
                 FontSize="18"
                 Padding="5" />
                </Border>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock
                Text="Mật khẩu"
                FontSize="20"
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Regular"
                Foreground="#808080">

                </TextBlock>
                <Border 
                BorderThickness="2"
                CornerRadius="4"  
                Background="#DCDCDC"
                Padding="2"
                Width="216"
                Height="43"
                HorizontalAlignment="Left">
                    <TextBox Text="admin1113"
               FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                 Background="Transparent"
                 Foreground="#152259"
                 BorderThickness="0"
                 IsReadOnly="True"
                 FontSize="18"
                 Padding="5" />
                </Border>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" FlowDirection="RightToLeft" >
            <Button x:Name="btEdit"
            Margin="10"
            VerticalAlignment="Center"
        
            Width="341"
            Height="62"
            Background="#8DB575"
            Style="{StaticResource MaterialDesignRaisedButton}"
            materialDesign:ButtonAssist.CornerRadius="30">
                <TextBlock HorizontalAlignment="Center"
               
                FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
               FontSize="24"
               Text="Đổi mật khẩu"
               Foreground="Snow"
               Cursor="Hand"
               ToolTip="Nhấn để thay đổi mật khẩu" />
            </Button>
            <Button x:Name="btChangePassword"
            Margin="10"
            VerticalAlignment="Center"
        
            Width="179"
            Height="62"
            Background="#9099C0"
            Style="{StaticResource MaterialDesignRaisedButton}"
            materialDesign:ButtonAssist.CornerRadius="30">
                <TextBlock HorizontalAlignment="Center"
   
            FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
           FontSize="24"
           Text="Chỉnh sửa"
           Foreground="Snow"
           Cursor="Hand"
           ToolTip="Nhấn để thay đổi thông tin tài khoản" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
