<UserControl x:Class="Stumana.WPF.Views.MainView.ClassOption.ClassListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="1000" d:DesignHeight="700"
             VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/CommonStyles.xaml" />
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/InputStyles.xaml" />
                <ResourceDictionary Source="/Stumana.WPF;component/ResourceXAML/Styles/FilterStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <!--<StackPanel Grid.Row="0"
                    Height="59"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                       Margin="10,0,0,0"
                       FontSize="40"
                       Text="Lớp học"
                       Foreground="Black"
                       Cursor="Hand"
                       ToolTip="Thiết lập điểm cho học sinh" />
        </StackPanel>-->

        <Border Grid.Row="1" BorderThickness="1" CornerRadius="10" BorderBrush="#152259" Margin="10 10 10 0">
            <GroupBox VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="GroupBox">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <ContentPresenter Grid.Row="0" ContentSource="Header" />
                                        <ContentPresenter Grid.Row="1" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="Transparent" />
                    </Style>
                </GroupBox.Style>
                <GroupBox.Header>
                    <Border Background="#059669"
                            CornerRadius="10,10,0,0"
                            Padding="10"
                            HorizontalAlignment="Stretch">
                        <TextBlock Text="Danh sách lớp"
                                   Foreground="White"
                                   FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                   FontSize="16"
                                   HorizontalAlignment="Center" />
                    </Border>
                </GroupBox.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- ComboBox -->
                    <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal">
                        <TextBlock Text="Năm Học:"
                                   Margin="10,0,0,0"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20" />

                        <ComboBox Background="#FFFFFF"
                                  Padding="10 0 10 0"
                                  Width="150" Height="30"
                                  IsEditable="False"
                                  Text="Năm học"
                                  Foreground="Black"
                                  FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                  Style="{StaticResource MaterialDesignComboBox}"
                                  Margin="10,10,0,10"
                                  HorizontalAlignment="Left"
                                  BorderBrush="#64748B" BorderThickness="1"
                                  ItemsSource="{Binding SchoolYearCollection}"
                                  SelectedItem="{Binding SelectedSchoolYear}">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Green" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <TextBlock Text="Khối:"
                                   Margin="30,0,0,0"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20" />

                        <ComboBox Background="#FFFFFF"
                                  Padding="10 0 10 0"
                                  Width="150"
                                  Height="30"
                                  IsEditable="False"
                                  Text="Khối"
                                  Foreground="Black"
                                  FontFamily="pack://application:,,,/Resource/Font/#Poppins Medium"
                                  Style="{StaticResource MaterialDesignComboBox}"
                                  Margin="10,10,0,10"
                                  HorizontalAlignment="Left"
                                  BorderBrush="#64748B" BorderThickness="1"
                                  ItemsSource="{Binding GradeCollection}"
                                  SelectedItem="{Binding SelectedGrade}">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Green" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </StackPanel>
                    <!-- DataGrid -->
                    <Border Grid.Row="1" Grid.Column="0" Margin="0,0,30,0" VerticalAlignment="Stretch">
                        <DataGrid Margin="10 20 0 0"
                                  AutoGenerateColumns="False"
                                  Width="250"
                                  HorizontalAlignment="Stretch"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  ItemsSource="{Binding ClassTableView}"
                                  SelectedItem="{Binding SelectedClass, Mode=TwoWay}">

                            <!-- Tạo Style cho Header với góc bo tròn -->
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridColumnHeader">
                                                <Border Background="#152259"
                                                        BorderBrush="Transparent"
                                                        BorderThickness="0"
                                                        Height="34"
                                                        Padding="10,0,10,0"
                                                        CornerRadius="10,10,0,0">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="FontFamily"
                                            Value="pack://application:,,,/Resource/Font/#Poppins Medium" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Style>
                                <Style TargetType="DataGrid">
                                    <Setter Property="Background" Value="#F5F5F5" />
                                    <!-- Đổi màu nền -->
                                    <Setter Property="BorderBrush" Value="#152259" />
                                    <!-- Đổi màu viền -->
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                            </DataGrid.Style>

                            <DataGrid.CellStyle>
                                <Style BasedOn="{StaticResource MaterialDesignDataGridCell}"
                                       TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Tên Lớp" Width="*" Binding="{Binding [Tên lớp]}" />
                                <DataGridTextColumn Header="Sĩ số" Width="*" Binding="{Binding [Sĩ số]}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    <ScrollViewer Grid.Row="1" Grid.Column="1"
                                  HorizontalScrollBarVisibility="Auto"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch">
                        <Border HorizontalAlignment="Stretch">
                            <DataGrid Margin="0 20 0 0"
                                      AutoGenerateColumns="True"
                                      HorizontalAlignment="Stretch"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding StudentTableView}">

                                <!-- Tạo Style cho Header với góc bo tròn -->
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridColumnHeader">
                                                    <Border Background="#152259"
                                                            BorderBrush="Transparent"
                                                            BorderThickness="0"
                                                            Height="34"
                                                            CornerRadius="10,10,0,0"
                                                            Padding="10,0,10,0">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontSize" Value="16" />
                                        <Setter Property="FontFamily"
                                                Value="pack://application:,,,/Resource/Font/#Poppins Medium" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Style>
                                    <Style TargetType="DataGrid">
                                        <Setter Property="Background" Value="#F5F5F5" />
                                        <!-- Đổi màu nền -->
                                        <Setter Property="BorderBrush" Value="#152259" />
                                        <!-- Đổi màu viền -->
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Style>
                                </DataGrid.Style>

                                <DataGrid.CellStyle>
                                    <Style BasedOn="{StaticResource MaterialDesignDataGridCell}"
                                           TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    </Style>
                                </DataGrid.CellStyle>
                            </DataGrid>
                        </Border>
                    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    FlowDirection="RightToLeft">
            <Button Width="200"
                    Content="Xuất danh sách lớp"
                    FontSize="18"
                    Padding="10"
                    Margin="10,15,10,15"
                    Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Margin="10,15,10,15"
                    Width="220"
                    FontSize="18"
                    Content="Thêm học sinh vào lớp"
                    Padding="10"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding AddStudentToClassCommand}"/>
            <Button Margin="10,15,10,15"
                    Width="140"
                    FontSize="18"
                    Content="Thêm lớp học"
                    Padding="10"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding AddClassroomCommand}" />
        </StackPanel>
    </Grid>
</UserControl>